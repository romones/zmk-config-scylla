#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define DEF 0
#define SYM 1
#define NAV 2

/ {
    macros {
        ZMK_MACRO(screenshot,

        wait-ms = <30>;
        tap-ms = <40>;
        bindings =
            <&macro_press &kp LGUI &kp LSHIFT>,
            <&macro_tap &kp N5>,
            <&macro_release &kp LSHIFT &kp LGUI>;

        )
    };
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <250>;
        };

        lhm: lhm {
            compatible = "zmk,behavior-hold-tap";
            label = "LHM";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <6 18 19 20 21 22 23 31 32 33 34 35 43 44 45 46 47 7 8 9 10 11 30 42 51 52 53 56 57>;
        };

        rhm: rhm {
            compatible = "zmk,behavior-hold-tap";
            label = "RHM";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41 48 49 50 54 55>;
        };
    };

    combos {
        compatible = "zmk,combos";

        big_pinky_left {
            bindings = <&mo 5>;
            key-positions = <37 25>;
        };

        big_pinky_right {
            bindings = <&mo 5>;
            key-positions = <46 34>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // TODO: Add Switch to NAV-layer on this half

